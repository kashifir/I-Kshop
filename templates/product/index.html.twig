{% extends 'base.html.twig' %}

{% block title %} {% trans %}Our Products {% endtrans %}{% endblock %}

{% block body %}
    <div class="row">
        {% for product in products %}
        <div class="col-md-3">
            <div class="card" >
                <img style="height:150px" src="/uploads/products/{{  product.image }}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{ product.name }}</h5>
                    <p class="card-text">{{ product.description|u.truncate(150, "...", false)|raw }}</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

{% endblock %}
